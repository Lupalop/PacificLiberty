// Common: Game over
group $_go
    if !0
        printc,1n,@BRED,go_0,@_,2n
        points,list
        printc,1n,@BRED,@UE
        printr,go_1,go_2,go_3,go_4
        printc,1n,@UD,@_
        //quit
        printc,2n,<quit overridden>,1n
    else
        goto,$_f
    end
end

